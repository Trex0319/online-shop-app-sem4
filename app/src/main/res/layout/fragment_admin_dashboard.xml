<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ui.fragment.admin.AdminDashboardFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCurrentUserName"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15sp"
                    android:textAlignment="center"
                    android:text="Welcome, Admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <LinearLayout
                    android:layout_marginTop="30sp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:text="Total Sales: 77"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:text="Pending Orders:19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_margin="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:padding="8dp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="25dp"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:text="Your banner"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>

                        <LinearLayout
                            android:id="@+id/shimmer_admin"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView_banner"
                                android:layout_gravity="center"
                                android:background="#AAAAAA"
                                android:layout_margin="10sp"
                                android:layout_width="145dp"
                                android:layout_height="90dp">
                            </ImageView>

                            <androidx.cardview.widget.CardView
                                android:layout_gravity="center"
                                android:layout_margin="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:padding="5dp"
                                    android:id="@+id/btnChangeBanner"
                                    android:background="@drawable/et_background"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:text="  Click to Upload or Change Banner  "
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                </TextView>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivProduct"
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:layout_marginBottom="10dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_image" />

                            <Button
                                android:id="@+id/btnAddProductImage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/purple_button_bg"
                                android:textColor="@color/white"
                                android:text="Click to Upload"
                                android:textAlignment="center"
                                android:layout_marginBottom="10dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etProductName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Product Name" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etProductInfo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Product Features" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etProductStore"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Product Store" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etProductPrice"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Product Price"
                                        android:inputType="numberDecimal" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp">

                                    <AutoCompleteTextView
                                        android:id="@+id/actvCategory"
                                        style="@style/Widget.Material3.TextInputEditText.OutlinedBox.Dense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:hint="Select Category"
                                        android:inputType="none" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnAddProduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/purple_button_bg"
                            android:textColor="@color/white"
                            android:text="Update"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPopularBrands"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="      All Listings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/tvSeeAll"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="See All"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">
                    </TextView>

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="horizontal"
                    android:id="@+id/rvProductAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>